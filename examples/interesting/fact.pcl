program factorial;
    var x : integer;
    var n : integer;        (* Calculate factorial of n -- initialized below *)

    function calc (n : integer) : integer;
    begin
        result := 1;

        while n > 0 do
        begin
            result := result * n;
            n := n - 1
        end
    end;

begin
    n := 5;
    x := calc (n)
end.