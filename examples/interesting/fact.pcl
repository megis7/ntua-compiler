program factorial;

    var x : integer;
    var n : integer;        (* Calculate factorial of n -- initialized below *)

    function calc (n : integer) : integer;
        var temp : integer;
    begin
        if n <= 0 then
        begin
            result := 1;
            return
        end;

        temp := calc (n - 1);     (* Not needed but to demonstrate use of local variable *)
        result := n * temp
    end;

begin
    n := 5;
    x := calc (n)
end.